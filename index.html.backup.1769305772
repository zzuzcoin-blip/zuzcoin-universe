                    <textarea id="notaryContent" rows="6" placeholder="Paste your document text here..."></textarea>
                </div>
                <div class="form-group">
                    <label>Or upload file:</label>
                    <input type="file" id="notaryFile">
                </div>
                <button class="btn" id="notarizeBtn">
                    <i class="fas fa-seal"></i> Notarize Document (Simulation)
                </button>
                <div class="alert" id="notaryAlert"></div>
            </div>
