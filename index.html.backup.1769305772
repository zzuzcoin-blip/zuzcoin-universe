    <!-- –£–≤–µ–¥–æ–º–ª–µ–Ω–∏—è -->
    <div id="globalAlert" class="alert" style="position: fixed; bottom: 20px; right: 20px; max-width: 400px; z-index: 10000;"></div>

    <script>
        // ==================== –°–ò–°–¢–ï–ú–ê –ù–ê–í–ò–ì–ê–¶–ò–ò ====================
        document.querySelectorAll('.nav-link').forEach(link => {
            link.addEventListener('click', function() {
                // –û–±–Ω–æ–≤–ª—è–µ–º –∞–∫—Ç–∏–≤–Ω—ã–µ –∫–ª–∞—Å—Å—ã
                document.querySelectorAll('.nav-link').forEach(l => l.classList.remove('active'));
                this.classList.add('active');
                
                // –ü–æ–∫–∞–∑—ã–≤–∞–µ–º –Ω—É–∂–Ω—É—é —Å–µ–∫—Ü–∏—é
                const sectionId = this.getAttribute('data-section');
                document.querySelectorAll('.section').forEach(s => s.classList.remove('active'));
                document.getElementById(sectionId).classList.add('active');
            });
        });

        // –ö–Ω–æ–ø–∫–∏ –±—ã—Å—Ç—Ä—ã—Ö –¥–µ–π—Å—Ç–≤–∏–π
        document.querySelectorAll('button[data-section]').forEach(btn => {
            btn.addEventListener('click', function() {
                const sectionId = this.getAttribute('data-section');
                document.querySelectorAll('.nav-link').forEach(l => l.classList.remove('active'));
                document.querySelector(`.nav-link[data-section="${sectionId}"]`).classList.add('active');
                document.querySelectorAll('.section').forEach(s => s.classList.remove('active'));
                document.getElementById(sectionId).classList.add('active');
            });
        });

        // ==================== –ü–†–û–í–ï–†–ö–ê API ====================
        async function checkAPIStatus() {
            try {
                const response = await fetch('/api/status');
                const data = await response.json();
                document.getElementById('apiStatusText').textContent = '‚úÖ Online';
                document.getElementById('apiStatusText').style.color = '#10b981';
                return data;
            } catch (error) {
                document.getElementById('apiStatusText').textContent = '‚ùå Offline';
                document.getElementById('apiStatusText').style.color = '#ef4444';
                return null;
            }
        }

        // ==================== METAMASK –ò–ù–¢–ï–ì–†–ê–¶–ò–Ø ====================
        let userAddress = null;

        async function connectWallet() {
            if (typeof window.ethereum === 'undefined') {
                showAlert('Please install MetaMask!', 'error');
                return;
            }

            try {
                // –ó–∞–ø—Ä–∞—à–∏–≤–∞–µ–º –ø–æ–¥–∫–ª—é—á–µ–Ω–∏–µ
                const accounts = await window.ethereum.request({
                    method: 'eth_requestAccounts'
                });

                userAddress = accounts[0];
                
                // –û–±–Ω–æ–≤–ª—è–µ–º UI
                document.getElementById('walletStatus').textContent = userAddress.substring(0, 6) + '...' + userAddress.substring(38);
                document.getElementById('walletAddressDash').textContent = userAddress.substring(0, 10) + '...';
                
                // –û–±–Ω–æ–≤–ª—è–µ–º –±–∞–ª–∞–Ω—Å—ã
                await updateBalances();
                
                showAlert('Wallet connected successfully!', 'success');
                
                // –°–ª—É—à–∞–µ–º –∏–∑–º–µ–Ω–µ–Ω–∏—è
                window.ethereum.on('accountsChanged', handleAccountsChanged);
                window.ethereum.on('chainChanged', () => window.location.reload());

            } catch (error) {
                console.error('Wallet connection error:', error);
                showAlert('Connection error: ' + error.message, 'error');
            }
        }

        async function updateBalances() {
            if (!userAddress) return;
            
            try {
                // ETH –±–∞–ª–∞–Ω—Å
                const ethBalance = await window.ethereum.request({
                    method: 'eth_getBalance',
                    params: [userAddress, 'latest']
                });
                const eth = parseInt(ethBalance) / 1e18;
