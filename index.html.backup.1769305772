        "function balanceOf(address owner) view returns (uint256)",
        "function decimals() view returns (uint8)",
        "function symbol() view returns (string)"
    ];

    try {
        // 1. –ü–æ–ª—É—á–∞–µ–º –±–∞–ª–∞–Ω—Å (–≤–æ–∑–≤—Ä–∞—â–∞–µ—Ç—Å—è –≤ –Ω–∞–∏–º–µ–Ω—å—à–∏—Ö –µ–¥–∏–Ω–∏—Ü–∞—Ö, –Ω–∞–ø—Ä–∏–º–µ—Ä wei)
        const rawBalance = await contract.balanceOf(userAddress);
        // 2. –ü–æ–ª—É—á–∞–µ–º decimals —Ç–æ–∫–µ–Ω–∞ (–¥–ª—è –∫–æ—Ä—Ä–µ–∫—Ç–Ω–æ–≥–æ –æ—Ç–æ–±—Ä–∞–∂–µ–Ω–∏—è)
        const decimals = await contract.decimals();
        // 3. –ö–æ–Ω–≤–µ—Ä—Ç–∏—Ä—É–µ–º –±–∞–ª–∞–Ω—Å –≤ –Ω–æ—Ä–º–∞–ª—å–Ω—ã–π –≤–∏–¥
        const formattedBalance = ethers.utils.formatUnits(rawBalance, decimals);
        // 4. –ü–æ–ª—É—á–∞–µ–º —Å–∏–º–≤–æ–ª —Ç–æ–∫–µ–Ω–∞ (–Ω–∞–ø—Ä–∏–º–µ—Ä, "ZUZ")
        const symbol = await contract.symbol();

