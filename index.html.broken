    <!-- JavaScript -->
    <script>
        // –ö–æ–Ω—Ñ–∏–≥—É—Ä–∞—Ü–∏—è
        const API_BASE = 'http://localhost:3001/api';
        const CONTRACT_ADDRESS = "0x5B9d42EcAf7498771cC4edF728d3Dc3cc1f87C31";
        let currentUser = null;
        
        // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è
        document.addEventListener('DOMContentLoaded', function() {
            console.log('ZUZCOIN Universe v3.0 initialized');
            
            // –ö–Ω–æ–ø–∫–∞ –ø–æ–¥–∫–ª—é—á–µ–Ω–∏—è –∫–æ—à–µ–ª—å–∫–∞
            document.getElementById('connectBtn').addEventListener('click', connectWallet);
            
            // –ü—Ä–æ–≤–µ—Ä—è–µ–º –µ—Å–ª–∏ —É–∂–µ –ø–æ–¥–∫–ª—é—á–µ–Ω
            if (window.ethereum?.selectedAddress) {
                connectWalletSilently();
            }
            
            // –ó–∞–≥—Ä—É–∂–∞–µ–º –¥–∞–Ω–Ω—ã–µ
            updateDashboardData();
            
            // –ü–æ–∫–∞–∑—ã–≤–∞–µ–º dashboard –ø–æ —É–º–æ–ª—á–∞–Ω–∏—é
            showDashboard();
        });
        
        // –ü–æ–¥–∫–ª—é—á–µ–Ω–∏–µ –∫–æ—à–µ–ª—å–∫–∞
        async function connectWallet() {
            if (!window.ethereum) {
                alert('Please install MetaMask to use ZUZCOIN Universe');
                return;
            }
            
            try {
                const btn = document.getElementById('connectBtn');
                btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Connecting...';
                btn.disabled = true;
                
                const accounts = await window.ethereum.request({
                    method: 'eth_requestAccounts'
                });
                
                currentUser = accounts[0];
                updateWalletDisplay();
                updateBalance();
                
                btn.innerHTML = `<i class="fas fa-check"></i> ${currentUser.slice(0,6)}...${currentUser.slice(-4)}`;
                btn.disabled = false;
                
                console.log('Wallet connected:', currentUser);
                
            } catch (error) {
                console.error('Connection error:', error);
                alert('Connection failed: ' + error.message);
                document.getElementById('connectBtn').innerHTML = '<i class="fas fa-plug"></i> Connect Wallet';
                document.getElementById('connectBtn').disabled = false;
            }
        }
        
        // –¢–∏—Ö–∏–π —Ä–µ–∫–æ–Ω–Ω–µ–∫—Ç
        async function connectWalletSilently() {
            try {
                const accounts = await window.ethereum.request({ method: 'eth_accounts' });
                if (accounts.length > 0) {
                    currentUser = accounts[0];
                    updateWalletDisplay();
                    updateBalance();
                    document.getElementById('connectBtn').innerHTML = 
                        `<i class="fas fa-check"></i> ${currentUser.slice(0,6)}...${currentUser.slice(-4)}`;
                }
            } catch (error) {
                console.log('Silent connection check failed');
            }
        }
        
        // –û–±–Ω–æ–≤–ª–µ–Ω–∏–µ –æ—Ç–æ–±—Ä–∞–∂–µ–Ω–∏—è –∫–æ—à–µ–ª—å–∫–∞
        function updateWalletDisplay() {
            // –ú–æ–∂–Ω–æ –¥–æ–±–∞–≤–∏—Ç—å –±–æ–ª—å—à–µ –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏–∏ –æ –∫–æ—à–µ–ª—å–∫–µ
        }
        
        // –û–±–Ω–æ–≤–ª–µ–Ω–∏–µ –±–∞–ª–∞–Ω—Å–∞
        async function updateBalance() {
            if (!currentUser) return;
            
            try {
                const response = await fetch(`${API_BASE}/balance/${currentUser}`);
                const data = await response.json();
                
                document.getElementById('balanceZUZ').textContent = 
                    parseFloat(data.balanceZUZ).toLocaleString('en-US', {
                        minimumFractionDigits: 2,
                        maximumFractionDigits: 4
                    });
                
            } catch (error) {
                console.error('Balance update error:', error);
            }
        }
        
        // –û–±–Ω–æ–≤–ª–µ–Ω–∏–µ –¥–∞–Ω–Ω—ã—Ö –¥–∞—à–±–æ—Ä–¥–∞
        async function updateDashboardData() {
            try {
                // –û–±–Ω–æ–≤–ª—è–µ–º —Å—Ç–∞—Ç–∏—Å—Ç–∏–∫—É —Ñ–∏–ª–∞–Ω—Ç—Ä–æ–ø–∏–∏
                const response = await fetch(`${API_BASE}/philanthropy`);
                const data = await response.json();
                
                document.getElementById('totalDonated').textContent = 
                    parseFloat(data.totalDonated).toLocaleString('en-US', {
                        minimumFractionDigits: 2,
                        maximumFractionDigits: 2
                    });
                
            } catch (error) {
                console.error('Dashboard data error:', error);
            }
        }
        
        // –ù–∞–≤–∏–≥–∞—Ü–∏—è –ø–æ —Å–µ–∫—Ü–∏—è–º
        function showDashboard() {
            showSection('dashboardSection');
            updateNavTab('dashboard');
            updateDashboardData();
        }
        
        function showDex() {
            showSection('dexSection');
            updateNavTab('dex');
        }
        
        function showFactory() {
            alert('Token Factory - Coming Soon!\n\nCreate your own tokens with built-in philanthropy.');
        }
        
        function showNotary() {
            alert('Digital Notary - Coming Soon!\n\nNotarize documents on the blockchain.');
        }
        
        function showKYC() {
            alert('KYC Verification - Coming Soon!\n\nVerify your identity for enhanced features.');
        }
        
        // –í—Å–ø–æ–º–æ–≥–∞—Ç–µ–ª—å–Ω—ã–µ —Ñ—É–Ω–∫—Ü–∏–∏ –Ω–∞–≤–∏–≥–∞—Ü–∏–∏
        function showSection(sectionId) {
            // –°–∫—Ä—ã–≤–∞–µ–º –≤—Å–µ —Å–µ–∫—Ü–∏–∏
            document.querySelectorAll('.section').forEach(section => {
                section.classList.add('hidden');
            });
            
            // –ü–æ–∫–∞–∑—ã–≤–∞–µ–º –Ω—É–∂–Ω—É—é —Å–µ–∫—Ü–∏—é
            document.getElementById(sectionId)?.classList.remove('hidden');
        }
        
        function updateNavTab(activeTab) {
            // –û–±–Ω–æ–≤–ª—è–µ–º –∞–∫—Ç–∏–≤–Ω—É—é –≤–∫–ª–∞–¥–∫—É
            document.querySelectorAll('.nav-tab').forEach(tab => {
                tab.classList.remove('active');
            });
            
            // –ú–æ–∂–Ω–æ –¥–æ–±–∞–≤–∏—Ç—å –ª–æ–≥–∏–∫—É –¥–ª—è —É—Å—Ç–∞–Ω–æ–≤–∫–∏ –∞–∫—Ç–∏–≤–Ω–æ–π –≤–∫–ª–∞–¥–∫–∏
        }
        
        // –û–±–º–µ–Ω —Ç–æ–∫–µ–Ω–æ–≤
        async function executeSwap() {
            if (!currentUser) {
                alert('Please connect your wallet first');
                return;
            }
            
            const amount = document.getElementById('swapAmount').value;
            const fromToken = document.getElementById('fromToken').value;
            const toToken = document.getElementById('toToken').value;
            
            if (!amount || parseFloat(amount) <= 0) {
                alert('Please enter a valid amount');
                return;
            }
            
            try {
                const swapBtn = document.getElementById('swapBtn');
                swapBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Processing...';
                swapBtn.disabled = true;
                
                const response = await fetch(`${API_BASE}/dex/swap`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        fromToken,
                        toToken,
                        amount: parseFloat(amount),
                        userAddress: currentUser
                    })
                });
                
                const result = await response.json();
                
                if (result.success) {
                    // –ü–æ–∫–∞–∑—ã–≤–∞–µ–º —É—Å–ø–µ—Ö
                    document.getElementById('receiveAmount').value = result.amountOut;
                    document.getElementById('donationAmount').textContent = 
                        `${result.donation} ${fromToken}`;
                    
                    alert(`‚úÖ Swap successful!\nReceived: ${result.amountOut} ${toToken}\nDonated: ${result.donation} ${fromToken}`);
                    
                    // –û–±–Ω–æ–≤–ª—è–µ–º –±–∞–ª–∞–Ω—Å
                    updateBalance();
                    updateDashboardData();
                } else {
                    throw new Error(result.error || 'Swap failed');
                }
                
            } catch (error) {
                alert(`Swap error: ${error.message}`);
            } finally {
                const swapBtn = document.getElementById('swapBtn');
                swapBtn.innerHTML = '<i class="fas fa-exchange-alt"></i> Swap Tokens';
                swapBtn.disabled = false;
            }
        }
        
        // –û–±–º–µ–Ω —Ç–æ–∫–µ–Ω–æ–≤ (–ø—Ä–µ–¥–ø—Ä–æ—Å—á–µ—Ç)
        function swapTokens() {
            const amount = document.getElementById('swapAmount').value;
            const fromToken = document.getElementById('fromToken').value;
            const toToken = document.getElementById('toToken').value;
            
            if (amount && parseFloat(amount) > 0) {
                // –ü—Ä–æ—Å—Ç–æ–π —Ä–∞—Å—á–µ—Ç
                const donation = parseFloat(amount) * 0.01;
                const received = parseFloat(amount) * 0.99 * 0.95; // 1% donation + 5% slippage
                
                document.getElementById('receiveAmount').value = received.toFixed(4);
                document.getElementById('donationAmount').textContent = 
                    `${donation.toFixed(4)} ${fromToken}`;
            }
        }
        
        // –û–±—Ä–∞–±–æ—Ç—á–∏–∫–∏ —Å–æ–±—ã—Ç–∏–π MetaMask
        if (window.ethereum) {
            window.ethereum.on('accountsChanged', (accounts) => {
                if (accounts.length > 0) {
                    currentUser = accounts[0];
                    updateWalletDisplay();
                    updateBalance();
                    document.getElementById('connectBtn').innerHTML = 
                        `<i class="fas fa-check"></i> ${currentUser.slice(0,6)}...${currentUser.slice(-4)}`;
                } else {
                    currentUser = null;
                    document.getElementById('connectBtn').innerHTML = '<i class="fas fa-plug"></i> Connect Wallet';
                    document.getElementById('balanceZUZ').textContent = '0.0000';
                }
            });
            
            window.ethereum.on('chainChanged', () => {
                window.location.reload();
            });
        }
        
        // –≠–∫—Å–ø–æ—Ä—Ç –¥–ª—è –∫–æ–Ω—Å–æ–ª–∏
        window.zuz = {
            connect: connectWallet,
            showDashboard: showDashboard,
            showDex: showDex,
            user: () => currentUser
        };
        
        console.log('üí° Console commands: zuz.connect(), zuz.showDashboard(), zuz.user()');
    </script>
