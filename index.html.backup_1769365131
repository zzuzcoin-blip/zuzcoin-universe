    <!-- PROFESSIONAL JAVASCRIPT -->
    <script>
    // ===== PROFESSIONAL ZUZCOIN UNIVERSE =====
    const CONTRACT_ADDRESS = "0x5B9d42EcAf7498771cC4edF728d3Dc3cc1f87C31";
    
    // 1. INITIALIZE
    document.addEventListener('DOMContentLoaded', function() {
        console.log("üöÄ ZUZCOIN Universe Professional v1.0");
        
        // Initialize buttons
        initWallet();
        initSendButton();
        
        // Check if wallet already connected
        if (window.ethereum?.selectedAddress) {
            updateWalletDisplay();
            updateBalances();
        }
    });
    
    // 2. WALLET CONNECTION
    async function initWallet() {
        const btn = document.getElementById('connectWalletBtn');
        if (!btn) return;
        
        btn.onclick = async function() {
            if (!window.ethereum) {
                alert('Please install MetaMask to continue');
                return;
            }
            
            try {
                btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Connecting...';
                btn.disabled = true;
                
                const accounts = await window.ethereum.request({
                    method: 'eth_requestAccounts'
                });
                
                const address = accounts[0];
                updateWalletDisplay(address);
                updateBalances(address);
                
                btn.innerHTML = '<i class="fas fa-check"></i> Connected';
                btn.classList.add('btn-success');
                btn.disabled = false;
                
                console.log('‚úÖ Wallet connected:', address);
                
            } catch (error) {
                console.error('Connection error:', error);
                btn.innerHTML = '<i class="fas fa-wallet"></i> Connect Wallet';
                btn.disabled = false;
                alert('Connection failed: ' + error.message);
            }
        };
    }
    
    // 3. SEND ZUZ FUNCTION
    async function initSendButton() {
        const btn = document.getElementById('sendZuzBtn');
        if (!btn) return;
        
        btn.onclick = async function() {
            if (!window.ethereum?.selectedAddress) {
                alert('Please connect your wallet first');
                return;
            }
            
            const amount = prompt('Enter ZUZ amount to send:', '10');
            if (!amount || isNaN(amount) || parseFloat(amount) <= 0) {
                alert('Invalid amount');
                return;
            }
            
            const toAddress = prompt('Recipient address (0x...):', '');
            if (!toAddress || !toAddress.startsWith('0x') || toAddress.length !== 42) {
                alert('Invalid Ethereum address');
                return;
            }
            
            const philanthropy = (amount * 0.01).toFixed(4);
            const recipientAmount = (amount * 0.99).toFixed(4);
            
            if (confirm(`Send ${amount} ZUZ?\n\n` +
                       `Recipient gets: ${recipientAmount} ZUZ\n` +
                       `Philanthropy (1%): ${philanthropy} ZUZ`)) {
                
                try {
                    btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Sending...';
                    btn.disabled = true;
                    
                    const provider = new ethers.providers.Web3Provider(window.ethereum);
                    const signer = provider.getSigner();
                    
                    const contract = new ethers.Contract(
                        CONTRACT_ADDRESS,
                        [
                            "function transfer(address to, uint256 amount) returns (bool)",
                            "function decimals() view returns (uint8)"
                        ],
                        signer
                    );
                    
                    const decimals = await contract.decimals();
                    const amountWei = ethers.utils.parseUnits(recipientAmount, decimals);
                    
                    const tx = await contract.transfer(toAddress, amountWei);
                    
                    alert(`‚úÖ Transaction sent!\n\n` +
                          `Hash: ${tx.hash}\n` +
                          `Philanthropy: ${philanthropy} ZUZ\n\n` +
                          `Track on Etherscan: https://sepolia.etherscan.io/tx/${tx.hash}`);
                    
                    // Update balance after 5 seconds
                    setTimeout(() => {
                        updateBalances(window.ethereum.selectedAddress);
                        btn.innerHTML = '<i class="fas fa-paper-plane"></i> Send';
                        btn.disabled = false;
                    }, 5000);
                    
                } catch (error) {
                    alert('‚ùå Transaction failed: ' + error.message);
                    btn.innerHTML = '<i class="fas fa-paper-plane"></i> Send';
                    btn.disabled = false;
                }
            }
        };
    }
    
    // 4. UPDATE WALLET DISPLAY
    function updateWalletDisplay(address = null) {
        const addrElement = document.getElementById('walletAddress');
        if (!addrElement) return;
        
        if (address) {
            addrElement.textContent = address.slice(0, 10) + '...' + address.slice(-8);
            addrElement.style.color = 'var(--primary)';
        } else {
            addrElement.textContent = 'Not connected';
            addrElement.style.color = 'var(--text-muted)';
        }
    }
    
    // 5. UPDATE BALANCES
    async function updateBalances(address = null) {
        if (!address && window.ethereum?.selectedAddress) {
            address = window.ethereum.selectedAddress;
        }
        
        if (!address) return;
        
        try {
            // Update ZUZ balance
            const provider = new ethers.providers.Web3Provider(window.ethereum);
            const contract = new ethers.Contract(
                CONTRACT_ADDRESS,
                [
                    "function balanceOf(address) view returns (uint256)",
                    "function symbol() view returns (string)"
                ],
                provider
            );
            
            const [balanceWei, symbol] = await Promise.all([
                contract.balanceOf(address),
                contract.symbol()
            ]);
            
            const balanceZUZ = ethers.utils.formatUnits(balanceWei, 18);
            const formattedBalance = parseFloat(balanceZUZ).toFixed(4);
            
            // Update both balance displays
            const balanceElement = document.getElementById('zuzBalance');
            const bigBalanceElement = document.getElementById('zuzBalanceBig');
            
            if (balanceElement) {
                balanceElement.textContent = formattedBalance + ' ' + symbol;
                balanceElement.style.color = 'var(--success)';
            }
            
            if (bigBalanceElement) {
                bigBalanceElement.textContent = formattedBalance + ' ' + symbol;
                bigBalanceElement.style.color = 'var(--success)';
            }
            
            console.log(`‚úÖ Balance updated: ${formattedBalance} ${symbol}`);
            
        } catch (error) {
            console.error('Balance update error:', error);
        }
    }
    
    // 6. META MASK EVENTS
    if (window.ethereum) {
        window.ethereum.on('accountsChanged', (accounts) => {
            if (accounts.length > 0) {
                updateWalletDisplay(accounts[0]);
                updateBalances(accounts[0]);
            } else {
                updateWalletDisplay(null);
                document.getElementById('zuzBalance').textContent = '0 ZUZ';
                document.getElementById('zuzBalanceBig').textContent = '0.0000 ZUZ';
                document.getElementById('connectWalletBtn').innerHTML = '<i class="fas fa-wallet"></i> Connect Wallet';
                document.getElementById('connectWalletBtn').classList.remove('btn-success');
            }
        });
        
        window.ethereum.on('chainChanged', () => {
            window.location.reload();
        });
    }
    
    // Export functions for console access
    window.updateZUZBalance = updateBalances;
    window.connectZUZWallet = () => document.getElementById('connectWalletBtn').click();
    window.sendZUZ = () => document.getElementById('sendZuzBtn').click();
    
    console.log("‚úÖ ZUZCOIN Universe Professional initialized");
    console.log("üí° Commands: updateZUZBalance(), connectZUZWallet(), sendZUZ()");
    </script>
</body>
</html>
