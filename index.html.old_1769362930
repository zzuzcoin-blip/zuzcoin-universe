<script>
// –§—É–Ω–∫—Ü–∏–∏ –¥–ª—è –ø–µ—Ä–µ—Ö–æ–¥–∞ –ø–æ —Ä–∞–∑–¥–µ–ª–∞–º
function showSection(section) {
    const sections = {
        dex: "ZUZIM DEX - Decentralized Exchange (Coming Soon)",
        factory: "Token Factory - Create your own ERC-20 tokens (Coming Soon)", 
        notary: "Digital Notary - Timestamp documents on blockchain (Coming Soon)",
        kyc: "KYC Verification - Secure identity verification (Coming Soon)"
    };
    
    alert(`üöÄ ${sections[section]}\n\nThis feature is under development. You'll be able to:\n‚Ä¢ ${section === 'dex' ? 'Trade tokens with 1% auto-donate' : ''}\n‚Ä¢ ${section === 'factory' ? 'Create custom tokens in 2 minutes' : ''}\n‚Ä¢ ${section === 'notary' ? 'Notarize documents permanently' : ''}\n‚Ä¢ ${section === 'kyc' ? 'Verify identity securely' : ''}`);
    
    // –ú–æ–∂–Ω–æ –¥–æ–±–∞–≤–∏—Ç—å —Ä–µ–∞–ª—å–Ω—É—é –Ω–∞–≤–∏–≥–∞—Ü–∏—é –ø–æ–∑–∂–µ
    console.log(`Navigating to: ${section}`);
}

// –ê–Ω–∏–º–∞—Ü–∏—è –ø—Ä–∏ –Ω–∞–≤–µ–¥–µ–Ω–∏–∏
document.addEventListener('DOMContentLoaded', function() {
    document.querySelectorAll('.ecosystem-card').forEach(card => {
        card.addEventListener('mouseenter', function() {
            this.style.transform = 'translateY(-5px)';
            this.style.boxShadow = '0 10px 25px rgba(0,0,0,0.2)';
            this.style.borderColor = '#6366f1';
        });
        
        card.addEventListener('mouseleave', function() {
            this.style.transform = 'translateY(0)';
            this.style.boxShadow = 'none';
            this.style.borderColor = 'var(--border)';
        });
    });
    
    console.log("üöÄ ZUZCOIN Ecosystem navigation loaded");
    console.log("üí° Main idea: 1% of EVERY transaction goes to charity automatically");
});
</script>
